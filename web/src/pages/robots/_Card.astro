---
interface Props {
  title: string;
  price: string;
  button: string;
  action: string;
  items: string[];
}
const { title, price, button, items, action } = Astro.props;
const id = title.toLowerCase();
---

<article id={id} class="flex flex-col items-center p-4 w-80 rounded-2xl bg-bg-light">
  <h1 class="py-2 px-4 rounded-[1.2rem] font-light text-sm text-center bg-bg invert opacity-60">{title}</h1>
  <h2 class="mt-8 mb-1 font-light text-3xl">{price}</h2>
  <h3 class="h-10 flex items-center"><slot name="h3" /></h3>
  <ul class="mt-6 mb-10">
    {items.map((item) => <li class="before:content-['âœ“'] before:mr-3">{item}</li>)}
  </ul>
  <button
    form={`form-${id}`}
    type="submit"
    class="mt-auto p-2 text-lg rounded-lg bg-bg invert cursor-pointer self-stretch text-center no-underline hover:shad-blue">{button}</button
  >
  <form id={`form-${id}`} action={action} method="get"></form>
</article>
